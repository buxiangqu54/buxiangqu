<view class="tabbar">
  <view class="item {{index==idx?'active':''}}" wx:for="{{tabBar}}" wx:for-index="idx" date-path="{{item.pagePath}}" bindtap="goto" data-index='{{idx}}'>
   
    <i class="iconfont {{item.icon}} icon" ></i>
    <view class="text">{{item.name}}</view>
  </view>
  <view class="move" style="left:{{90+(index*157)}}rpx"></view>
</view>

